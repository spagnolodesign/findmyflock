   <body style="background-color: white">
    <div class="job-samples-page">

      <div style="padding-bottom:5vh">
        <div class="row">
          <div class="col-xs-12 col-sm-12 col-md-12 align-self-center">
            <h4 class="centered mx-auto" style="max-width:50vw">
              <div class="underlined-medium small-padded-title mx-auto" style="max-width:253px">Job Selection</div></h4>
            </div>
          </div>
          <div class="row">
            <div class="col-xs-12 col-sm-12 col-md-12 justify-content-center align-self-center">
              <br>
              <p class="centered mx-auto" style="max-width: 70vw">Here are a few job samples you can find in our database. <br>
              If you want to see more, complete your profile and find the jobs that will match your skills and expected benefits!</p>
            </div>
          </div>
        </div>

        <% @jobs.each_with_index do |job, index| %>
        <div class="job-sample mx-auto">
          <div class="job-show-titles">
            <h4 class="row justify-content-center underlined-orange-dark"><%= job.title %></h4>
          </div>
          <div class="centered">
            <h5 class="text-muted"><%= job.company.name  %></h5>
            <p class="text-muted">
              <%= job.city %>
              <% if job.remote == ["remote"] %>
              - Remote
              <% elsif job.remote == ["office"] %>
              - Office
              <% elsif job.remote == ["remote", "office"]%>
              - Office & Remote
              <% end %>
            </p>
          </div>

          <div class="row centered justify-content-center pt-2 pb-4">
            <div class="col-xs-12 col-sm-12 col-md-12 col-md-12 job-show-skills">
              <div class="job-show-titles">
                <h5 class="h6 row justify-content-center underlined-orange pt-3">Main skills</h5>
              </div>
              <div class="row">
                <table class="table">
                  <tbody>
                    <% job.skills.each do |skill| %>
                    <tr>
                      <td><i class="devicon-<%= skill.name %>-plain colored"></i></td>
                      <td><%= skill.name %></td>
                      <td><%= skill.level %></td>
                    </tr>
                    <% end %>
                  </tbody>
                </table>
              </div>

              <div class="row">

                <div class="col-xs-12 col-sm-12 col-md-12 col-md-12 col-lg-12">
                  <div class="job-show-titles">
                    <h5 class="h6 row justify-content-center underlined-orange pt-3">Location</h5>
                  </div>
                  <div class="row justify-content-center">
                    <% if job.remote == ["remote"] %>
                    <p class="centered">Remote opportunity</p>
                    <% elsif job.remote == ["office"] %>
                    <p class="centered">Office opportunity</p>
                    <% else %>
                    <p class="centered">Remote and office opportunity</p>
                    <% end %>
                  </div>
                </div>

                <div class="col-xs-12 col-sm-12 col-md-12 col-md-12 col-lg-12">
                  <div class="job-show-titles">
                    <h5 class="h6 row justify-content-center underlined-orange pt-3">Sponsorship</h5>
                  </div>
                  <div class="row justify-content-center">
                    <% if job.can_sponsor == true %>
                    <p class="centered">Yes</p>
                    <% else %>
                    <p class="centered">No</p>
                    <% end %>

                  </div>
                </div>
              </div>
            </div>
          </div>

          <div class="row pb-4">
            <div class="col-xs-12 col-sm-12 col-md-12 col-md-12 mb-3">
              <div class="job-show-titles">
               <h5 class="h6 row justify-content-center underlined-orange pt-3">Benefits</h5>
             </div>
             <div class="row justify-content-center">
              <div class="tagcloud pt-3">
                <ul>
                  <% job.benefits.each do |benefit| %>
                  <li data-toggle="popover" data-placement="top"><%= benefit %></li>
                  <% end %>
                </ul>
              </div>
            </div>
          </div>
        </div>
        <div class="row pb-4">
          <div class="col-xs-12 col-sm-12 col-md-12 col-md-12 mb-3">
            <div class="job-show-titles">
              <h5 class="h6 row justify-content-center underlined-orange pt-3">Company Values</h5>
            </div>
            <div class="row justify-content-center">
              <div class="tagcloud pt-3">
                <ul>
                  <% job.cultures.each do |culture| %>
                  <li data-toggle="popover" data-placement="top"><%= culture %></li>
                  <% end %>
                </ul>
              </div>
            </div>
            <div class="job-show-titles">
              <h5 class="h6 row justify-content-center underlined-orange pt-5">Job description</h5>
            </div>
            <div class="collapsing-description" id='<%= "#{index}-description" %>'>
            <div class="row justify-content-center pt-4" style="padding-right: 16px;padding-left: 16px;text-align: justify; font-family: 'Roboto'; font-weight: 100;">
              <p class="job-description" ><%= raw job.description %></p>
            </div>
            <div class="collapsing-button" data-value='<%= "#{index}-description" %>'>Read More</div>
          </div>
            <div class="row d-flex justify-content-center align-content-center">
              <%= link_to 'Join to apply', new_developer_registration_path, class: "button-sample", style: "margin-top: 4vh;" %>
            </div>
          </div>
        </div>
      </div>
      <% end %>
    </div>
  </div>
</div>
</body>
