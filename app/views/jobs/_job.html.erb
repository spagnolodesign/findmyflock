  <div class="row centered matched-job">

    <!--
    <div class="col-xs-1 col-sm-1 col-md-1 col-md-1">
      <%= image_tag "checked.png", class: "icon-resized" %>
    </div>
    -->

    <div class="col-xs-11 col-sm-11 col-md-5">
      <h4><%= job.title %></h4>
      <h5 class="text-muted"><%= job.company.name %></h5>
      <div><%= job.city %></div>
    </div>

    <div class="col-xs-12 col-sm-12 col-md-4 matched-job-skills">
     <h5 class="row matched-job-skills-title">Main skills</h5>
     <div class="row">
      <table class="table">
        <tbody>
          <% job.skills.each do |skill| %>
            <tr>
              <td><i class="devicon-<%= skill.name %>-plain colored"></i></td>
              <td><%= skill.name %></td>
              <td><%= skill.level %></td>
            </tr>
          <% end %>
        </tbody>
      </table>
    </div>
  </div>

  <div class="col-xs-12 col-sm-12 col-md-3 mt-2 mb-2">
    <%= link_to "Apply", new_job_application_path(job), class:"btn-orange btn-apply"  %>
  </div>

</div>
